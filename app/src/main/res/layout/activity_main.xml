<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUIForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:padding="12dp"
        android:text="@string/button_text_chapter3A"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUILayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:padding="12dp"
        android:text="@string/button_text_chapter3B"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:elevation="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUIForm" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRecyclerViewAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:padding="12dp"
        android:text="@string/button_text_ch3_android_c"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUILayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGalleryMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:padding="12dp"
        android:text="@string/button_text_ch3_android_d"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:elevation="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRecyclerViewAdapter" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOtherView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:padding="12dp"
        android:text="@string/button_text_ch3_androidE"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:elevation="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGalleryMessage" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnWebServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:padding="12dp"
        android:text="@string/button_text_ch4_web_services"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:elevation="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnOtherView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>